<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'books/form' %>
    <% if @user.books.any? %>
      <table>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <%= @books.each do |book| %>
          <tr>
            <th><%= book.title %></th>
            <th><%= book.author %></th>
            <th><%= link_to "Edit", edit_book_path %></th>
            <th><%= link_to "Delete", book_path(book), method: :delete %></th>
          </tr>
        <% end %>
      </table>
      <%= will_paginate @books %>
    <% end %>
  </div>
</div>