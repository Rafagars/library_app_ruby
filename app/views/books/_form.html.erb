<%= form_for(:book, url: yield(:url)) do |f| %>
  <span>Title: <%= f.text_field :title%></span>
  <span>Author: <%= f.text_field :author %></span>
  <span> Status: </span>
  
  <label class="radio-inline">
    Owned:
    <%=f.radio_button :status, "owned", :checked => true %>
  </label>
    
  <label class="radio-inline">
    Wishlist:
    <%= f.radio_button :status, "wishlist" %>
  </label>
  
  <span><%= f.submit "Add", class: "btn btn-primary" %></span>
<% end %>
